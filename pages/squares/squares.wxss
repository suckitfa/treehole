/* pages/squares/squares.wxss */
@import "/pages/bottommenu/bottommenu";
page {
  background-color: #efefef;
}
.scbg {
  background-color: #efefef;
  width: 100%;
  height: 91%;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}
.box {
  width: 100%;
  background-color: white;
  padding-top: 20rpx;
}
.firstblock {
  height: 150rpx;
  margin-left: 4%;
  margin-right:4%;
  display: flex;
  justify-content: start;
  align-items: flex-start;
}
.avatar {
  width: 130rpx;
  height: 130rpx;
}

.person {
  width: 75%;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin-top: 10rpx;
  font-size: 40rpx;
}

.usertime {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin-top: 30rpx;
}

.showname {
  font-size: 34rpx;
  color:#3f5185;
  font-weight: bold;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.showtime {
  font-size: 25rpx;
}
.secondblock {
  margin-top: 10rpx;
  margin-left:4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #bbb;
}
.content {
  font-size: 29rpx;
  color:#101010;
}
.thirdblock {
  height: 100rpx;
  margin-right: 4%;
  margin-left: 4%;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}

.like {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}
.num {
  height: 52rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #101010;
}